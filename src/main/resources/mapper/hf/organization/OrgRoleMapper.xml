<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.netmatch.mapper.organization.OrgRoleMapper">
    
    <delete id="deleteRoleMenus" parameterType="string">
    	DELETE FROM org_role_menu WHERE role_id = #{_parameter}
    </delete>
    
    <insert id="insertRoleMenus" >  
        INSERT INTO org_role_menu(role_id,menu_id)  
        VALUES   
        <foreach collection="menuIds" item="menuId" separator=",">  
            (#{roleId},#{menuId})  
        </foreach>  
</insert>  
    
</mapper>